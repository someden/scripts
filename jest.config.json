{
	"testEnvironment": "node",
	"testRegex": "/test/unit/.*\\.spec\\.js$",
	"modulePathIgnorePatterns": [
		"<rootDir>/packages/.*/package/"
	],
	"transform": {
		"^.+\\.(jsx?|tsx?)$": "babel-jest"
	},
	"collectCoverage": true,
	"collectCoverageFrom": [
		"packages/*/src/**/*.{js,jsx}",
		"!packages/scripts-app/**",
		"!**/node_modules/**"
	],
	"coverageReporters": [
		"lcovonly",
		"text"
	]
}
